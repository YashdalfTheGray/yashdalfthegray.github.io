  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug tests",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
      "runtimeArgs": ["--serial", "${file}"],
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**/*.js"],
      "env": {
        "WEBSITE_URL": "http://127.0.0.1:8000"
      }
    }
  ]
}
